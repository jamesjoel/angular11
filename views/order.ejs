<!DOCTYPE html>
<html ng-app="myApp">
<head>
	<title></title>
	<link rel="stylesheet" type="text/css" href="/css/bootstrap.css">
	<script type="text/javascript" src="/js/jquery.js"></script>
	<script type="text/javascript" src="/js/bootstrap.js"></script>
	<script type="text/javascript" src="/js/angular.js"></script>
	<script type="text/javascript" src="/js/newapp.js"></script>
	
</head>
<body ng-controller="myCtrl">
<hr />
<hr />
<div class="container">
	<button ng-click="orderType('name')">Name</button>
	<button ng-click="orderType('age')">Age</button>
	<button ng-click="orderType('fee')">Fee</button>
	<table class="table table-bordered table-stripped table-hover">
		<tr>
			<th>S.No.</th>
			<th>Name</th>
			<th>Age</th>
			<th>Fee</th>

		</tr>
		<tr ng-repeat="x in data | orderBy : fieldName">
			<td ng-bind="$index+1"></td>
			<td ng-bind="x.name"></td>
			<td ng-bind="x.age"></td>
			<td ng-bind="x.fee | currency : '&pound;'"></td>
		</tr>
	</table>
</div>
</body>
</html>